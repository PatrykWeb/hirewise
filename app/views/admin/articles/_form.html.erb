<%= form_with model: [:admin, article] do |form| %>
  <%= render Admin::Forms::ContainerComponent.new(title) do |container| %>
    <%= render Admin::Forms::FieldComponent.new(form, :title) do |field| %>
      <% field.with_input_text %>
    <% end %>
    <%= render Admin::Forms::FieldComponent.new(form, :published_at) do |field| %>
      <% field.with_input_datetime %>
    <% end %>
    <%= render Admin::Forms::FieldComponent.new(form, :content) do |field| %>
      <% field.with_input_rich_text_area classes: "prose max-w-none" %>
    <% end %>

    <% container.with_button_group do %>
      <%= render Admin::Forms::ButtonLinkComponent.new("cancel", admin_articles_path) %>
      <%= render SubmitButtonComponent.new(button_classes: "ml-3") %>
    <% end %>
  <% end %>
<% end %>
