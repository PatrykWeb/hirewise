<p style="color: green"><%= notice %></p>

<h1>Articles</h1>

<%= link_to "New article", new_admin_article_path %>

<div id="articles" class="mt-4">
  <% @articles.each do |article| %>
    <div id="<%= dom_id article %>" class="mt-2">
      <p>
        <strong>Title:</strong>
        <%= article.title %>
      </p>
      <p>
        <strong>Published at:</strong>
        <%= article.published_at %>
      </p>
    </div>
    <p>
      <%= link_to "Show this article", admin_article_path(article) %>
    </p>
  <% end %>
</div>

