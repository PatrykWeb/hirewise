<div class="bg-blue-950 py-16 sm:py-24 lg:py-32">
  <div class="mx-auto grid max-w-7xl grid-cols-1 gap-10 px-6 lg:grid-cols-12 lg:gap-8 lg:px-8">
    <div class="max-w-xl text-3xl font-bold tracking-tight text-gray-300 sm:text-4xl lg:col-span-7">
      <h2 class="inline sm:block lg:inline xl:block">Want solar job alerts and tips?</h2>
      <p class="inline sm:block lg:inline xl:block">Sign up for our newsletter.</p>
    </div>
    <%= form_with(model: Inquiry.new, html: {class: "w-full max-w-md lg:col-span-5 lg:pt-2"}) do |form| %>
      <div class="flex gap-x-4">
        <%= invisible_captcha %>
        <%= form.label :email, class: "sr-only" %>
        <%= form.email_field :email, autocomplete: "email", placeholder: "Enter your email", required: true, class: "min-w-0 flex-auto rounded-md border-0 bg-white/5 px-3.5 py-2 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6" %>
        <%= form.button "Subscribe", class: "flex-none rounded-md px-4 py-2 border border-transparent shadow-sm font-medium rounded-md text-white bg-green-500 hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-800 focus:ring-gray-500" %>
      </div>
       <p class="mt-4 text-sm leading-6 text-gray-300">We care about your data. Read our <%= link_to "privacy policy", policies_privacy_path, class: "font-semibold text-white hover:underline" %>.</p>
    <% end %>
  </div>
</div>
